<div class="container">

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="bg-white p-5 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4"><%= @user.name %> <%= @user.surname %></h2>
      <p class="text-gray-600"><strong>Email:</strong> <%= @user.email %></p>
    </div>
  </div>
</div>

  <div class="field">
    <%= link_to 'Indietro', users_path, class: "btn btn-light" %>
    <%= link_to 'Modifica', edit_user_path(@user), class: "btn btn-dark" %>
  </div>
<br>
  <%= button_to 'Elimina', user_path(@user), method: :delete, class: "btn btn-danger" %>




</div>